{% extends "layout.njk" %}

{% block content %}

 <div class="recipe-header">
        <img src="{{item.image}}" alt="{{item.title}}">
        <h1>{{item.title}}</h1>
        <p>por {{item.author}}</p>
    </div>

    <div class="recipe-itens-section">
        <h2>Ingredientes <span id="ingredientsSpan">ESCONDER</span></h2>
        <div id="ingredientsToHide">
            <ul class="recipe-itens-lista">
                {% for ingredient in item.ingredients %}
                    <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="recipe-preparation-section">
        <h2>Modo de preparo <span id='prepSpan'>ESCONDER</span></h2>
        <div id="prepToHide">
            {% for step in item.preparation %}
                <p>{{step}}</p>
            {% endfor %}
        </div>
    </div>

    <div class="recipe-aditional-info-section">
        <h2>Informações adicionais <span id="infoSpan">ESCONDER</span></h2>
        <div id="infoToHide">
            <p>{{item.information}}</p>
        </div>
    </div>

{% endblock %}

{% block scripts %}
<script src="/recipe-scripts.js"></script>
{% endblock %}